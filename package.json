{
  "name": "node-webpackify",
  "version": "2.1.2",
  "description": "Utility for redirecting require() requests in Node to Webpack's module compiler",
  "keywords": [
    "node",
    "babel-register",
    "register",
    "JIT",
    "compiler",
    "webpack"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/niieani/node-webpackify.git"
  },
  "homepage": "https://github.com/niieani/node-webpackify#readme",
  "author": "Bazyli Brzóska <bazyli.brzoska@gmail.com>",
  "collaborators": [
    "Bazyli Brzóska <bazyli.brzoska@gmail.com>"
  ],
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc -p ."
  },
  "dependencies": {
    "deasync": "^0.1.13",
    "debug": "^3.1.0",
    "tslib": "^1.9.0",
    "webpack": "^4.0.0"
  },
  "devDependencies": {
    "@types/deasync": "0.1.0",
    "@types/debug": "0.0.30",
    "@types/execa": "0.9.0",
    "@types/jest": "23.3.1",
    "@types/node": "^10.9.4",
    "@types/webpack": "4.4.11",
    "autoprefixer": "9.1.3",
    "css-loader": "1.0.0",
    "execa": "1.0.0",
    "jest": "23.5.0",
    "jsdom": "12.0.0",
    "jsdom-global": "3.0.2",
    "postcss-import": "12.0.0",
    "postcss-loader": "3.0.0",
    "raw-loader": "0.5.1",
    "style-loader": "0.23.0",
    "ts-jest": "23.1.4",
    "typescript": "3.0.3",
    "webpack-command": "0.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\/src\\/.+\\.[jt]sx?$": "ts-jest"
    },
    "testRegex": "\\/src\\/.*(__tests__/.*|\\.test)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    }
  }
}
